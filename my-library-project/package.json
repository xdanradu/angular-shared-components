{
  "name": "my-lib",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch-styles": "npx node-sass ./projects/my-library/src/assets/styles/styles.scss ./dist/my-library/styles.css --importer ./node_modules/node-sass-import --watch",
    "copy-styles": "npx node-sass ./projects/my-library/src/assets/styles/styles.scss ./dist/my-library/styles.css --importer ./node_modules/node-sass-import",
    "copy-assets-images": "npx cpx \"./projects/my-library/src/assets/images/**/*\" \"./dist/my-library/assets/images\" --watch",
    "watch-assets-images": "npx cpx \"./projects/my-library/src/assets/images/**/*\" \"./dist/my-library/assets/images\" --watch",
    "build-and-watch": "concurrently \"npm run build-watch\" \"delay 10 && npm run copy-styles && npm run watch-styles\"  \"delay 10 && npm run copy-assets-images && npm run watch-assets-images\"",
    "build-watch": "ng build my-library --watch",
    "build-bare": "ng build my-library --prod",
    "test": "ng test",
    "lint": "ng lint",
    "pack": "npm pack ./dist/my-library/"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.2.4",
    "@angular/common": "~10.2.4",
    "@angular/compiler": "~10.2.4",
    "@angular/core": "~10.2.4",
    "@angular/forms": "~10.2.4",
    "@angular/platform-browser": "~10.2.4",
    "@angular/platform-browser-dynamic": "~10.2.4",
    "@angular/router": "~10.2.4",
    "delay-cli": "^1.1.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1002.3",
    "@angular/cli": "~10.2.3",
    "@angular/compiler-cli": "~10.2.4",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "concurrently": "^6.2.0",
    "cpx": "^1.5.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^10.1.0",
    "node-sass": "^6.0.0",
    "node-sass-import": "^2.0.1",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  }
}
